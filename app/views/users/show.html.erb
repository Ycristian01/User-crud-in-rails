<nav class="navbar navbar-light bg-light" style="padding:25px">
    <%= link_to users_path, class:"text-info" do %>
        <span class="fa fa-home" aria-hidden="true" style='font-size:40px; padding:2px; position: absolute; top: 3px; left: 50px; right: 200px'></span>
    <% end %>
</nav>


<div class="card w75" style="width:30rem; padding:10px; margin: 1% auto">
  <div class="card-body">
    <p id="notice"><%= notice %></p>


    <h2 class="card-title"><%= @user.name %></h5>

    <% if @user.avatar.attached? %>
      <%= link_to url_for(@user.avatar), class: "text-primary" do%>
        <%= image_tag @user.avatar.variant(resize: '400x400') %>
      <% end %>
    <% end %>
    <p>
      <strong>Description:</strong>
      <%= @user.description %>
    </p>
    

    <div class="d-flex flex-row bd-highlight mb-3" style="margin: 1% auto;">
      <h5>Social networks  </h2>

      <%= link_to new_user_social_network_path(@user), class:"text-primary" do %>
        <span class="fas fa-link" aria-hidden="true" style='font-size:20px; padding:2px; margin: auto 2%'></span>
      <% end %>
    </div>
    
    <% @user.social_networks.each do |social_network| %>
      <p>
        <%= link_to social_network.name, social_network.link, class: "text-primary"%>
        <%= link_to edit_user_social_network_path(@user,social_network), class:"text-warning pull-right" do %>
          <span class="fa fa-edit" aria-hidden="true" style='font-size:20px; padding:1px; margin: auto 2%'></span>
        <% end %>
        <%= link_to user_social_network_path(@user,social_network), method: :delete, data: { confirm: 'Are you sure?' }, class:"text-danger pull-right" do %>
          <span class='fas fa-trash-alt' aria-hidden="true" style='font-size:20px'></span>
        <% end %>
      </p>
    <% end %>
  </div>
  
</div>

<div class="d-flex actions" style="margin: 0 auto; position: absolute; left: 435px; right: 200px">
  <%= button_to "Edit", edit_user_path(@user), :method => "get", class:"btn btn-warning btn-sm" %>
  <%= button_to "Back", users_path, :method => "get", class:"btn btn-success btn-sm", style:"margin: auto 15%"%>
  
</div>


