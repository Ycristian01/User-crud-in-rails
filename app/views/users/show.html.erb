<div class="card w75 card-user">
  <div class="card-body">

    <h2 class="card-title"><%= @user.name %></h5>

    <% if @user.avatar.attached? %>
      <%= link_to url_for(@user.avatar), class: "text-primary" do%>
        <%= image_tag @user.avatar.variant(resize: '150x150') %>
      <% end %>
    <% end %>

    <p>
      <strong>Description:</strong>
      <%= @user.description %>
    </p>

    <% if current_user==@user %>
      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>

      <p>
        <strong>Username:</strong>
        <%= @user.username %>
      </p>

    <% end %>

    <div class="d-flex flex-row bd-highlight mb-3 socialnetwork-add">
      <h5>Social networks</h2>

      <%= link_to new_user_social_network_path(@user), class:"text-primary" do %>
        <span class="fas fa-link socialnetwork-icon" aria-hidden="true"></span>
      <% end %>
      
    </div>
    
    <% @user.social_networks.each do |social_network| %>
      <p>
        <%= link_to social_network.name, social_network.link, class: "text-primary"%>

        <% if current_user==@user %>
          <%= link_to edit_user_social_network_path(@user,social_network), class:"text-warning pull-right" do %>
            <span class="fa fa-edit edit-icon" aria-hidden="true"></span>
          <% end %>

          <%= link_to user_social_network_path(@user,social_network), method: :delete, data: { confirm: 'Are you sure?' }, class:"text-danger pull-right" do %>
            <span class='fas fa-trash-alt delete-icon' aria-hidden="true"></span>
          <% end %>
        <% end %>

      </p>
    <% end %>
  </div>
</div>

<div class="d-flex actions edit-back">
  <% if current_user==@user %>
    <%= button_to "Edit", edit_user_registration_path, :method => "get", class:"btn btn-warning btn-sm" %>
  <%end%>
  <%= button_to "Back", users_path, :method => "get", class:"btn btn-success btn-sm back"%>
</div>


