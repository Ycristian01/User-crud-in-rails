<p id="notice"><%= notice %></p>

<h1 class="d-flex justify-content-start" style="margin: auto 43%">Users</h1>

<table class = "table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td scope="row"><%= user.name %></td>
        <td scope="row"><%= user.description %></td>
        <td><%= link_to user, class:"text-info" do %>
          <span class="fas fa-user-circle" aria-hidden="true" style='font-size:22px; padding:1px; margin: auto 2%'></span>
        <% end %>
        </td>

        <td><%= link_to edit_user_path(user), class:"text-warning" do %>
          <span class="fa fa-edit" aria-hidden="true" style='font-size:22px; padding:1px; margin: auto 2%'></span>
        <% end %>
        </td>
        <td><%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, class:"text-danger" do %>
          <span class='fas fa-trash-alt' aria-hidden="true" style='font-size:22px'></span>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="actions">
  <%= button_to "New user", new_user_path, :method => "get", class:"btn btn-primary btn-sm" %>
</div>







