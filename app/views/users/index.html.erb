<h1 class="index-title">Users</h1>

<table class = "table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Photo</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>

        <td scope="row">
          <% if user.avatar.attached? %>
            <%= link_to url_for(user.avatar), class: "text-primary" do%>
              <%= image_tag user.avatar.variant(resize: '100x100') %>
            <% end %>
          <% end %>
        </td>

        <td scope="row"><%= user.name %></td>
        <td scope="row"><%= user.description %></td>

        <td><%= link_to user, class:"text-info" do %>
          <span class="fas fa-user-circle user-icon" aria-hidden="true"></span>
        <% end %>
        </td>

        <td><%= link_to edit_user_path(user), class:"text-warning" do %>
          <span class="fa fa-edit edit-icon" aria-hidden="true"></span>
        <% end %>
        </td>

        <td><%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, class:"text-danger" do %>
          <span class='fas fa-trash-alt delete-icon' aria-hidden="true"></span>
        <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
<br>

<div class="actions">
  <%= button_to "New user", new_user_registration_path, :method => "get", class:"btn btn-primary btn-sm" %>
</div>







