<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="card" style="width:20rem; padding:10px">


    <div class="field">
      <%= form.label :name  %>
      <%= form.text_field :name, class:"form-text text-muted", placeholder:"Enter name", style:"width:300px" %>
    </div>


    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description, class:"form-control", placeholder:"Type a description"  %>
    </div>

    <%if !@user.id.nil? %>
      <%= link_to "Add social networks", new_user_social_network_path(@user), :method => "get", class:"btn btn-outline-primary " %>
    <%end%>

    <div class="actions">
      <%= form.submit class:"btn btn-outline-primary", style:"margin: 5% 25%" %>
    </div>

    

  </div>

<% end %>
